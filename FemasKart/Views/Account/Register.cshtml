@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr"
      class="light-style customizer-hide"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="~/sneat-1.0.0"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>Register - Ferre</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/sneat-1.0.0/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/sneat-1.0.0/assets/vendor/css/core.css" />
    <link rel="stylesheet" href="~/sneat-1.0.0/assets/vendor/css/theme-default.css" />
    <link rel="stylesheet" href="~/sneat-1.0.0/assets/css/demo.css" />
    <link rel="stylesheet" href="~/sneat-1.0.0/assets/vendor/css/pages/page-auth.css" />
</head>

<body>
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center mb-3">
                            <a href="/" class="app-brand-link gap-2">
                                <span class="app-brand-logo demo">
                                    <!-- SVG Logo burada kalabilir -->
                                </span>
                                <span class="app-brand-text demo text-body fw-bolder">FERRE</span>
                            </a>
                        </div>

                        <h4 class="mb-2">Ferre Kayıt Ekranı</h4>
                        <p class="mb-4">Kayıt olmak için bilgilerinizi giriniz</p>

                        <form asp-action="Register" asp-controller="Account" method="post" class="mb-3">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı adı" required autofocus />
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email giriniz" required />
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <label class="form-label" for="password">Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifre giriniz" required />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                            <div class="mb-3 form-check">
                                <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" required />
                                <label class="form-check-label" for="terms-conditions">
                                    <a href="javascript:void(0);">Gizlilik politikası & koşullarını</a> kabul ediyorum
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary d-grid w-100">Kayıt Ol</button>
                        </form>

                        <p class="text-center">
                            <span>Zaten bir hesabınız var mı?</span>
                            <a asp-action="Login" asp-controller="Account">
                                <span>Giriş Yap</span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core JS -->
    <script src="~/sneat-1.0.0/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/sneat-1.0.0/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/sneat-1.0.0/assets/vendor/js/bootstrap.js"></script>
    <script src="~/sneat-1.0.0/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/sneat-1.0.0/assets/vendor/js/menu.js"></script>
    <script src="~/sneat-1.0.0/assets/js/main.js"></script>
</body>
</html>